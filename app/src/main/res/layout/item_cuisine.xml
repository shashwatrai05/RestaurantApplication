<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Enhanced Image Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/cuisine_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:contentDescription="@string/cuisine"
                android:background="#F5F5F5" />

            <!-- Subtle Gradient for Text Readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- Cuisine Name Overlay -->
            <TextView
                android:id="@+id/cuisine_name_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cuisine_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                android:padding="16dp"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />
        </androidx.cardview.widget.CardView>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/cuisine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cuisine_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/cuisine_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore authentic flavors"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

            <!-- Popular Badge (Optional) -->
            <TextView
                android:id="@+id/cuisine_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:background="@drawable/badge_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>